/* Tod0 form */

.todo-form {
  display: flex;
  flex-direction: row;  /* Направление главной оси  */
  justify-content: space-between; /* выравнивание элементов вдоль главной оси. */
  /*align-items: center;*/ /* выравнивание элементов вдоль поперечной оси. */
  flex-wrap: wrap; /* поддерживается многострочный режим. */
  align-content: stretch; /* kak будут выровнены по вертикали */

  width: 600px;
  margin: 0 auto 1em;
  padding: 1em;
  box-shadow: 0 2px 2px 0 rgba(0,0,0,.14),0 3px 1px -2px rgba(0,0,0,.2),0 1px 5px 0 rgba(0,0,0,.12);
  border-radius: 2px;
  background: rgba(39, 39, 39, 0.71);
}

.todo-form input {
  flex: 1;
  background: rgba(39, 39, 39, 0.9);
  color: #cccccc;
  border: 1px solid #3c3c3c;
  padding-left: 10px;
  transition: 1s all;
}
.todo-form input[name = body] {
  flex: 2 50%;
  margin: 10px auto;
}

.todo-form input:focus {
  border: 1px solid #1976D2;
}

.todo-form input:focus.ng-invalid.ng-dirty {
  border: 1px solid #dd0031;
}

.todo-form button {
  margin-left: 16px;
}
